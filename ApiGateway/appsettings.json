{
  "ReverseProxy": {
    "Routes": {
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/products/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/products" }
        ]
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ]
      }
    },
    "Clusters": {
      "products-cluster": {
        "Destinations": {
          "products-destination": {
            "Address": "http://localhost:5001/api/products"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-destination": {
            "Address": "http://localhost:5002/api/orders"
          }
        }
      }
    }
  }
}


